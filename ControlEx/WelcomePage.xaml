<?xml version="1.0" encoding="utf-8" ?>
<ContentPage  Title="Welcome"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControlEx.WelcomePage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" BackgroundColor="Green">
            <Label Text="Welcome to Xamarin.Forms!" />
            <Button Text="About Us" BackgroundColor="Transparent" TextColor="Blue" Clicked="Button_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>